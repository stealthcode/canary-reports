<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <system.webServer>
        <handlers>
            <add name="iisnode-server-js" path="canary.js" verb="*" modules="iisnode" resourceType="Unspecified" />
        </handlers>
        <rewrite>
            <rules>
                <rule name="root">
                    <match url="/*" />
                    <action type="Rewrite" url="canary.js" />
                </rule>
            </rules>
        </rewrite>
        <security>
            <requestFiltering>
                <hiddenSegments>
                    <add segment="node_modules" />
                </hiddenSegments>
            </requestFiltering>
        </security>
        <caching enabled="false" enableKernelCache="false" />  
    </system.webServer>
    <appSettings>
        <add key="CONFIG_KEY" value="local" />
    </appSettings>
</configuration>
